    {
      "method": "GET",
      "path": "/",
      "description": "Health check endpoint returning backend boilerplate message"
    },
    {
      "method": "GET", 
      "path": "/*",
      "description": "Catch-all route for SPA routing, serves index.html"
    }
  ],
  "project_structure": {
    "frontend": {
      "framework": "React with Vite",
      "location": "vitereact/",
